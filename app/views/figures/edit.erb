<h1>Edit figure</h1>
<form action="/figures/<%= @figure.id %>" method="POST">

  <input type="hidden" name="_method" value="PATCH">

  <label><h4>Figure Name: <input type="text" name="figure[name]" value="<%= @figure.name%>" id="figure_name"></h4></label>

  <label><h4>Landmarks:</h4></label>
    <%Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type ="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <% end %>
  <label><h4>New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></h4></label>

  <label><h4>Titles:</h4></label>
    <%Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type ="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
      <% end %>

  <label><h4>New Title: </h4></label>
  <input type="text" name="title[name]" id="new_title">


  <br></br>
  <input type="submit" id="submit" name="submit" value="Edit Figure">
</form>

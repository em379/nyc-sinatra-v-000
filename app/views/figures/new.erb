<h1>Create a New Figure</h1>
<form action="/figures" method="POST">

  <label><h4>Name: <input type="text" name="figure[name]" id="figure_name"></h4></label>


  <label><h4>Titles:</h4></label>
    <%Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type ="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><br>
      <% end %>

  <label><h4>Create a New Title:</h4></label>
  <input type="text" name="title[name]" id="new_title">


  <label><h4>Landmarks:</h4></label>
    <%Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type ="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><br>
        <% end %>

  <label><h4>Create a New Landmark:</h4></label>
  <label>Name:<input type="text" name="landmark[name]" id="new_landmark"></label><br>
  <label>Year:<input type="text" name="landmark[year_completed]"></label><br><br>


  <input type="submit" value="Create New Figure">

</form>
